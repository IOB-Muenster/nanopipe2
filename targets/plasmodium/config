[common]
# Is the target metagenomics or not? (1/0 = yes/no)
metagenomics=N
# The name of the target
name=Plasmodium falciparum genome

[input]
# The maximum size of the query file (in MB)
maxsize=1024
# Minimum query sequence length (in nucleotids)
minlen=10
# Maximum number of query sequences. If more, the
# remainung ones are skipped
maxseqs=10000

[last]
# Parameters for the lastal run
params=-a 15 -b 3 -A 15 -B 4 -S 1
# The substitution matrix
substmatrix=[4,-15,-4,-22],[-18,10,-20,-15],[-8,-18,9,-18],[-23,-11,-17,4]

[analyze]
# The minimum count of nucleotids at a position, so the position
# is not taken as a gap
mincount=10
# The minimum length of the locations in the results
minlen=40
# The maximum acceptable gap in locations
maxgap=20
# The maximum acceptable percentage of N in the locations
maxN=10
# Nucleotide counts are considered equal, if the numbers are somehow
# similar: (n1 * equal <= n2).  It is evaluated after sorting the
# nucelotide counts.
equal=0.8
# Take only highest score? (1/0 = Y/N)
hscore=N
